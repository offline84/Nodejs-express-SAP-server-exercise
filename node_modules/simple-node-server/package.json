{
  "name": "simple-node-server",
  "version": "1.7.0",
  "description": "a simple node server",
  "main": "dist/index.js",
  "types": "dist/simple-node-server.d.ts",
  "scripts": {
    "prebuild": "tslint -p tslint.json --exclude './test/**/*.ts'",
    "build": "tsc -p tsconfig.json",
    "testbuild": "tsc -p tsconfig.test.json",
    "postbuild": "node types_bundle.js",
    "devbuild": "tsc -w -p tsconfig.json",
    "pretest": "npm run testbuild",
    "test": "mocha ./test/dist/test/src/unit.test.base.js",
    "start": "npm run build",
    "dev": "npm run devbuild"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mafh612/simple-node-server.git"
  },
  "keywords": [
    "node",
    "server"
  ],
  "author": "mafh",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mafh612/simple-node-server/issues"
  },
  "homepage": "https://github.com/mafh612/simple-node-server#readme",
  "typescript": {
    "definition": "d.ts/dist/index.d.ts"
  },
  "dependencies": {
    "colors": "^1.0.0",
    "dts-bundle": "^0.7.3",
    "jsonwebtoken": "^8.1.0",
    "randomstring": "^1.1.5",
    "reflect-metadata": "^0.1.0",
    "simple-node-logger": "^0.93.33"
  },
  "devDependencies": {
    "@types/jest": "^22.2.2",
    "@types/jsonwebtoken": "^7.2.5",
    "@types/node": "^8.5.8",
    "@types/reflect-metadata": "0.0.5",
    "jest": "^22.4.3",
    "semantic-release": "^11.2.0",
    "ts-jest": "^22.4.2",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2"
  }
}
